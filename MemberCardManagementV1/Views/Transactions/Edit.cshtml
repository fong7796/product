@model MemberCardManagementV1.Models.Transaction

@{
    ViewBag.Title = "Sửa giao dịch tích điểm";
}

<h2>Sửa</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Giao dịch tích điểm</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.TransactionID)

    <div class="form-group">
        @Html.LabelFor(model => model.MemberCardID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*@Html.EditorFor(model => model.MemberCardID, new { htmlAttributes = new { @class = "form-control" } })*@
            @Html.DropDownListFor(model => model.MemberCardID,
                new SelectList(ViewBag.MemberCards, "Value", "Text"),
                new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MemberCardID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Point, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Point, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Point, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Revenue, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Revenue, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Revenue, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.HiddenFor(model => model.CreateDate)

    @Html.HiddenFor(model => model.ModifyDate)

    @Html.HiddenFor(model => model.CreateBy)

    @Html.HiddenFor(model => model.ModifyBy)

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Cất" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay lại danh sách", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
