@model IEnumerable<MemberCardManagementV1.Models.Transaction>

@{
    ViewBag.Title = "Danh sách giao dịch tích điểm";
}

<h2>Danh sách giao dịch tích điểm</h2>

<p>
    @Html.ActionLink("Thêm", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MemberCardNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Point)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Revenue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifyDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MemberCardNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Point)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Revenue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifyDate)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.TransactionID }) |
            @Html.ActionLink("Xem", "Details", new { id=item.TransactionID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.TransactionID })
        </td>
    </tr>
}

</table>
